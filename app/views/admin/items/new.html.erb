<h1>Add A New Item</h1>

<center>
  <%= form_tag "/admin/merchants/#{@merchant.id}/items", method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name%>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :price %>
  <%= text_field_tag :price %>

  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= label_tag :inventory %>
  <%= text_field_tag :inventory %>

  <%= submit_tag 'Add Item' %>
<% end %>
</center>
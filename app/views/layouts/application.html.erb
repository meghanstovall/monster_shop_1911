<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class = "topnav" id="top-nav">
      <%= link_to "Home", "/"%>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "Cart: #{cart.total_items}", "/cart" %>
      <% if current_user %>
        <%= link_to "My Profile", "/profile" %>
        <%= link_to "Logout", "/" %>
        <p>Logged in as <%= current_user.name %></p>
      <% else %>
        <%= link_to "Register as New User", "/register" %>
        <%= link_to "Login", "/login" %>
      <% end %>
    </nav>

    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>

  </body>
</html>
